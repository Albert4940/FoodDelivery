@model FoodDeliveryWebApp.Models.CartViewModel;
@{
    ViewData["Title"] = "Order Page";

    var Cart = Model?.cart;
    var Address = Model?.ShippingAddress;
}
<h1>Order Page</h1>
@{
    if (TempData["Result"] != null && TempData["Result"] != "")
    {
        <div class="alert alert-info" role="alert">
            @TempData["Result"]
        </div>
    }
    if (TempData["Error"] != null && TempData["Error"] != "")
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }
    else
    {
        <form asp-action="Create" asp-controller="Order">
            <div class="row">
               <div class="col-8">
                    <div class="card mb-3 ">
                       <div class="card-header">
                            Payment method
                       </div>
                       <div class="card-body">
                            <div class="form-check">
                               <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
                               <label class="form-check-label" for="flexRadioDefault1">
                                        PayPal
                               </label>
                             </div>
                       </div>
                   </div>
                    <div class="card mb-3">
                        <div class="card-header">
                            Shipping Address
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label asp-for="ShippingAddress.Address" class="form-label">Address</label>
                                <input type="text" class="form-control" asp-for="ShippingAddress.Address" placeholder="323, Rue Jhon Doe">
                            </div>
                            <div class="mb-3">
                                <label asp-for="ShippingAddress.City" class="form-label">City</label>
                                <input type="text" class="form-control" asp-for="ShippingAddress.City" placeholder="Quebec">
                            </div>
                            <div class="mb-3">
                                <label asp-for="ShippingAddress.PostalCode" class="form-label">PostalCode</label>
                                <input type="text" class="form-control" asp-for="ShippingAddress.PostalCode" placeholder="Z0S1S0">
                            </div>
                            <div class="mb-3">
                                <label asp-for="ShippingAddress.Country" class="form-label">County</label>
                                <input type="text" class="form-control" asp-for="ShippingAddress.Country" placeholder="Canada">
                            </div>
                        </div>
                    </div>
               </div>
               <div class="col-4">
                   <div class="card">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <h2>Order Summary</h2>
                                <span id="total-price"></span>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col">Items</div>
                                    <div class="col">$45</div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col">Tax</div>
                                    <div class="col">$45</div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col">Total</div>
                                    <!--<div class="col">@(Cart is null ? "0.00" : $"{Cart.TotalPrice:N2}")</div>-->
                                </div>
                            </li>
                            <li class="list-group-item">
                                <input type="submit" class="btn btn-primary btn-block" value="Pay Order"/>                                  
                            </li>
                        </ul>
                   </div>
               </div>
            </div>
        </form>
    }
}
